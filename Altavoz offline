<body>
    <div class="container">
        <div class="microphone-icon" id="micIcon"></div>
        <h1>Amplificador de Voz</h1>
        
        <button class="btn primary" id="startBtn" onclick="startAmplifier()">
            INICIAR
        </button>
        <button class="btn danger" id="stopBtn" onclick="stopAmplifier()" style="display: none;">
            DETENER
        </button>

        <div class="volume-control">
            <label for="volumeSlider"> Volumen de salida</label>
            <input type="range" id="volumeSlider" class="volume-slider" min="0" **max="200"** value="100">
            <div class="volume-display" id="volumeValue">100%</div>
        </div>

        <div class="delay-control">
            <label for="delaySlider">憋 Retardo (ms)</label>
            <input type="range" id="delaySlider" class="delay-slider" min="0" **max="30"** value="10">
            <div class="delay-display" id="delayValue">10ms</div>
        </div>
    </div>

    <script>
        let audioContext;
        let microphone;
        let gainNode;
        let delayNode;
        let isAmplifying = false;
        let mediaStream; // Para detener la pista de audio

        const startBtn = document.getElementById('startBtn');
        const stopBtn = document.getElementById('stopBtn');
        const volumeSlider = document.getElementById('volumeSlider');
        const volumeValue = document.getElementById('volumeValue');
        const delaySlider = document.getElementById('delaySlider');
        const delayValue = document.getElementById('delayValue');
        const micIcon = document.getElementById('micIcon');

        // Cargar valores guardados de volumen y retardo al inicio
        document.addEventListener('DOMContentLoaded', function() {
            try {
                const savedVolume = localStorage.getItem('amplifierVolume');
                if (savedVolume) {
                    volumeSlider.value = savedVolume;
                    volumeValue.textContent = savedVolume + '%';
                }

                const savedDelay = localStorage.getItem('amplifierDelay');
                if (savedDelay) {
                    delaySlider.value = savedDelay;
                    delayValue.textContent = savedDelay + 'ms';
                }
            } catch (e) {
                console.warn("No se pudo cargar localStorage. Puede ser modo inc贸gnito.");
            }
            // Reanudar AudioContext en el primer toque/clic (necesario en muchos m贸viles)
            document.body.addEventListener('touchstart', resumeAudioContext, { once: true });
            document.body.addEventListener('click', resumeAudioContext, { once: true });
        });

        // Actualizar display y ganancia del volumen
        volumeSlider.addEventListener('input', function() {
            const volume = parseInt(this.value);
            volumeValue.textContent = volume + '%';
            try { localStorage.setItem('amplifierVolume', volume); } catch (e) {}
            if (gainNode && audioContext) {
                // Curva de ganancia m谩s suave y lineal para evitar saturaci贸n: exponente 1.0 (o 1.2 si quieres un poco m谩s de fuerza al final)
                const gainFactor = Math.pow(volume / 100, **1.0**); 
                gainNode.gain.setTargetAtTime(gainFactor, audioContext.currentTime, 0.03);
            }
        });

        // Actualizar display y tiempo de retardo
        delaySlider.addEventListener('input', function() {
            const delay = parseInt(this.value);
            delayValue.textContent = delay + 'ms';
            try { localStorage.setItem('amplifierDelay', delay); } catch (e) {}
            if (delayNode && audioContext) {
                delayNode.delayTime.setTargetAtTime(delay / 1000, audioContext.currentTime, 0.01);
            }
        });

        // Inicia la amplificaci贸n
        async function startAmplifier() {
            try {
                startBtn.disabled = true;
                startBtn.style.opacity = 0.7;

                // Solicitar acceso al micr贸fono con configuraci贸n optimizada para claridad
                mediaStream = await navigator.mediaDevices.getUserMedia({ 
                    audio: {
                        echoCancellation: false,   // Desactivado: Evita procesamientos que pueden introducir latencia o artefactos
                        noiseSuppression: false,   // Desactivado: Idem anterior
                        autoGainControl: false,    // Desactivado: Para tener control manual total de la ganancia
                        sampleRate: 44100,         // Frecuencia de muestreo est谩ndar
                        channelCount: 1,           // Mono es suficiente
                        latency: 0.01              // Latencia muy baja para tiempo real
                    }
                });

                // Crear o reanudar AudioContext
                const AudioContext = window.AudioContext || window.webkitAudioContext;
                audioContext = new AudioContext({
                    latencyHint: 'interactive',
                    sampleRate: 44100
                });

                if (audioContext.state === 'suspended') {
                    await audioContext.resume();
                }

                // Crear nodos de audio
                microphone = audioContext.createMediaStreamSource(mediaStream);
                gainNode = audioContext.createGain();
                delayNode = audioContext.createDelay(0.05); // M谩ximo 50ms de retardo inicial para el nodo

                // Configurar ganancia y retardo iniciales
                const currentVolume = parseInt(volumeSlider.value);
                // Usamos exponente 1.0 para una curva de ganancia m谩s lineal y controlada
                const gainFactor = Math.pow(currentVolume / 100, **1.0**); 
                gainNode.gain.setValueAtTime(gainFactor, audioContext.currentTime);

                const currentDelay = parseInt(delaySlider.value);
                delayNode.delayTime.setValueAtTime(currentDelay / 1000, audioContext.currentTime);

                // Conectar nodos: Micr贸fono -> Retardo -> Ganancia -> Salida
                microphone.connect(delayNode);
                delayNode.connect(gainNode);
                gainNode.connect(audioContext.destination);

                isAmplifying = true;
                startBtn.style.display = 'none';
                stopBtn.style.display = 'block';
                micIcon.className = 'microphone-icon pulse';

                requestWakeLock(); // Activa Wake Lock para mantener pantalla encendida

            } catch (error) {
                console.error('Error al iniciar el amplificador:', error);
                alert('No se pudo iniciar el amplificador. Posibles razones:\n\n' +
                      '1. No permitiste el acceso al micr贸fono.\n' +
                      '2. La p谩gina no est谩 en HTTPS (conexi贸n segura) o localhost.\n' +
                      '3. No se detect贸 un micr贸fono.\n\n' +
                      'Recarg谩 la p谩gina y volv茅 a intentarlo.');
                startBtn.disabled = false;
                startBtn.style.opacity = 1;
            }
        }

        // Detiene la amplificaci贸n
        function stopAmplifier() {
            try {
                if (mediaStream) {
                    mediaStream.getTracks().forEach(track => track.stop());
                    mediaStream = null;
                }
                if (audioContext && audioContext.state !== 'closed') {
                    audioContext.close();
                    audioContext = null;
                }
                microphone = null;
                gainNode = null;
                delayNode = null;
                isAmplifying = false;

                startBtn.style.display = 'block';
                startBtn.disabled = false;
                startBtn.style.opacity = 1;
                stopBtn.style.display = 'none';
                micIcon.className = 'microphone-icon';

                if (wakeLock) {
                    wakeLock.release().then(() => wakeLock = null);
                }
            } catch (error) {
                console.error('Error al detener el amplificador:', error);
            }
        }

        // --- Funciones
